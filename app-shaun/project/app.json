{
  "expo": {
    "name": "SafeTour",
    "slug": "safetour",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "safetour",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0066cc"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "SafeTour needs location access to provide safety alerts and emergency services.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "SafeTour needs continuous location access for background safety monitoring when you enable tracking.",
        "NSMicrophoneUsageDescription": "SafeTour uses microphone for voice SOS commands like 'I need help'.",
        "NSSpeechRecognitionUsageDescription": "SafeTour uses speech recognition for voice SOS activation."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0066cc"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "RECORD_AUDIO",
        "SEND_SMS",
        "CALL_PHONE",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-location",
      "expo-notifications",
      "expo-secure-store",
      [
        "expo-task-manager",
        {
          "backgroundModes": ["location", "background-fetch"]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}