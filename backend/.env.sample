# Postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sih_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET=evidence

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=  # Optional, leave blank if no auth

# Keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_HOST=localhost
KEYCLOAK_PORT=8080
KEYCLOAK_REALM=sih-realm  # Optional, configure in UI
KEYCLOAK_CLIENT_ID=sih-client
KEYCLOAK_CLIENT_SECRET=your-secret-here

# Supabase (optional, set USE_SUPABASE=true to enable, but requires separate setup)
USE_SUPABASE=false
SUPABASE_URL=http://localhost:8000  # If using separate Supabase compose
SUPABASE_KEY=your-supabase-key

# Fabric
FABRIC_DEV_MODE=false  # Set to true to mock chaincode calls instead of real Fabric
FABRIC_CONNECTION_PROFILE_PATH=./fabric/connection.json
FABRIC_WALLET_PATH=./fabric/wallet

# FastAPI common
APP_ENV=development
SECRET_KEY=your-secret-key-for-jwt-etc

ENABLE_OPERATOR=false  # Set to false to disable Operator/112 service